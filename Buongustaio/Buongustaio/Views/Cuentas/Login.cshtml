@using Buongustaio.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<div class="text-center">
    <h2>INGRESO DE USUARIO</h2>
</div>
<div class="text-center">
    <h3>Ingresa tus datos de usuario para<br /> ordenar a domicilio:</h3>
</div>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Cuentas", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <hr />
                <div class="text-center">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Telefono, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.Telefono, new { @class = "input-small" })
                            @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "input-small" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Log in" class="btn btn-default" />
                        </div>
                    </div>
                </div>
               
                <div class="text-center">
                    <p>
                        @Html.ActionLink("Si aun no te has registrado da click en Registrate", "Register")
                    </p>
                    @*/*Enable this once you have account confirmation enabled for password reset functionality*/*@
                    <p>
                        @Html.ActionLink("Olvidaste tu contraseña? Recupérala Aqui", "ForgotPassword")
                    </p>
                </div>
                
            }
        </section>
    </div> 
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}